{
  "name": "aiblueprint-cli",
  "version": "1.0.2",
  "description": "AIBlueprint CLI for setting up Claude Code configurations",
  "author": "AIBlueprint",
  "license": "MIT",
  "type": "module",
  "bin": {
    "aiblueprint": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node && chmod +x dist/cli.js",
    "dev": "bun src/cli.ts",
    "dev-test": "rm -rf ./test-claude-config && bun src/cli.ts claude-code -f ./test-claude-config --skip setup",
    "test-local": "npm link",
    "release": "release-it",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.0.0",
    "release-it": "^19.0.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "claude-code-config"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "aiblueprint",
    "developer-tools"
  ]
}
