{
  "name": "aiblueprint-cli",
  "version": "1.1.7",
  "description": "AIBlueprint CLI for setting up Claude Code configurations",
  "author": "AIBlueprint",
  "license": "MIT",
  "type": "module",
  "bin": {
    "aiblueprint": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node && chmod +x dist/cli.js",
    "dev": "bun src/cli.ts",
    "dev-test": "rm -rf ./test-claude-config && bun src/cli.ts claude-code -f ./test-claude-config --skip setup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test-local": "npm link",
    "release": "release-it",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.0.0"
  },
  "devDependencies": {
    "@inquirer/testing": "^2.0.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^1.0.0",
    "release-it": "^19.0.4",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "claude-code-config"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "aiblueprint",
    "developer-tools"
  ]
}
