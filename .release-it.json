{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "npm": {
    "publish": true,
    "skipChecks": true,
    "publishArgs": ["--provenance", "--access", "public"]
  },
  "github": {
    "release": false
  },
  "hooks": {
    "before:init": "bun run build"
  }
}